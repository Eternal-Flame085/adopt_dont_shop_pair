<h3>Create new adoptable pet</h3>
<form action='/shelters/<%= params[:shelter_id] %>/pets' method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <p>Enter image link</p>
  <input type="text" name="pet[image]">

  <p>Enter Name of pet</p>
  <input type='text' name='pet[name]'/><br/>

  <p>Enter pet description</p>
  <input type='text' name='pet[description]'/><br/>

  <p>Enter pet aproximate age</p>
  <input type='text' name='pet[age]'/><br/>

  <p>Enter pet sex</p>
  <input type='text' name='pet[sex]'/><br/>
  <input type="hidden" name="pet[status]" value="Adoptable">
  <input type="hidden" name="pet[shelter_id]" value="<%=params[:shelter_id]%>">

  <input type='submit' value="Create Pet"/>
</form>
