<a href="/shelters">Shelters Index</a><br>
<a href="/pets">Pets Index</a><br>
<h1><%= @shelter.name %></h1>
<p>
  Address: <%= @shelter.address %><br>
  City: <%= @shelter.city %><br>
  State: <%= @shelter.state %><br>
  Zip: <%= @shelter.zip %><br>
  <a href="/shelters/<%= @shelter.id %>/pets">Shelter's Pets</a>
</p>


<a href="/shelters/<%= @shelter.id %>/new_review">New Review</a>

<% @reviews.each do |review|  %>
<section id="review-<%= review.id %>">
  <b>Title: <%= review.title %></b>
  <a href="/shelters/<%= @shelter.id %>/<%= review.id %>/edit_review">Edit Review</a>
  <%= link_to "Delete Review", "/shelters/#{@shelter.id}/#{review.id}", method: 'delete' =%><br>
  Rating: <%= review.rating %><br>
  Content: <%= review.content %><br>
  Picture: <%= review.photo %><br>
  User name: <%= @users.find(review.user_id).name %><br>
</section><br>
<% end %>
